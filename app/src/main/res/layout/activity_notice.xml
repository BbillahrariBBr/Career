<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgforapp"
    tools:context=".NoticeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="250dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#fff"
                android:background="@drawable/bg_red"
                android:textAlignment="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/notice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="ঢাকা বিশ্ববিদ্যালয় ক-ইউনিট ভর্তি পরীক্ষার জরুরী নোটিশ"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:background="@drawable/bg_green"
                    />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="ঢাকা বিশ্ববিদ্যালয় খ ইউনিট ভর্তির সাক্ষাৎকার বিষয়ক বিজ্ঞাপ্তি"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_yellow"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="ঢাকা বিশ্ববিদ্যালয় গ-ইউনিট এ ভর্তি সংক্রান্ত সময়সূচী"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_red"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="ঢাকা বিশ্ববিদ্যালয় গার্হস্থ্য অর্থনীতি ইউনিট ভর্তি: ২০১৯-২০২০"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_green"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="ঢাকা বিশ্ববিদ্যালয় চ ইউনিট ভর্তি সংক্রান্ত গুরুত্বপূর্ণ তারিখসমূহ"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_yellow"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Jnu Admission Announcement M.Sc. in CSE (Evening), Winter-2020"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_red"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Jnu Admission Notice (Session: 2019-20)"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_green"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
