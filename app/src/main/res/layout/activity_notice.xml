                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_yellow"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="ভর্তি নির্দেশিকা - আধুনিক ভাষা ইনস্টিটিউট, ঢাকা বিশ্ববিদ্যালয়"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_red"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="RUET Admission Test 2019-20 Seat Plan"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_green"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="RUET CCNA Re-Admission"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_yellow"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="true">
            <Button
                android:id="@+id/notice12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="KUET Post-Graduate Admission Notice (January 2020)"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:background="@drawable/bg_red"
                />
        </androidx.cardview.widget.CardView>






